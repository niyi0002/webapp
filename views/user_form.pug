extends layout

block content
 .col-md-6.main
   h1 #{title}
    if success_msgs
     for success_msg in success_msgs
      div.alert.alert-info #{ success_msg }

    form(method='POST' action='')
      div.form-group
        label(for='name') 
        input#name.form-control(type='text', placeholder='Username' name='name' value=(undefined===user ? '' : user.name))
      div.form-group
        label(for='email') 
        input#email.form-control(type='text', placeholder='Email' name='email' value=(undefined===user ? '' : user.email)) 
      div.form-group
        label(for='password') 
        input#password.form-control(type='password', placeholder='Password' name='password' value=(undefined===user ? '' : user.password))
      button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg